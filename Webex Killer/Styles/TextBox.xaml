<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Webex_Killer.Styles">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="TextBoxStyle" TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{DynamicResource TextBox.Background.Brush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBox.Text.Brush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TextBox.Border.Brush}"/>
    </Style>
</ResourceDictionary>